<div class="col-lg-6 mx-auto">
  <div class="card">
    <div class="card-header">
      <h2 class="text-center">Sign Up</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :first_name, class: "form-label mb-2" %>
          <%= f.text_field :first_name, class: "form-control form-control-lg", autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.label :last_name, class: "form-label mb-2" %>
          <%= f.text_field :last_name, class: "form-control form-control-lg" %>
        </div>
        <div class="form-group">
          <%= f.label :contact_number, class: "form-label mb-2" %>
          <%= f.telephone_field :contact_number, maxlength: 10, class: "form-control form-control-lg" %>
        </div>
        <div class="form-group">
          <%= f.label :address, class: "form-label mb-2" %>
          <%= f.text_field :address, class: "form-control form-control-lg" %>
        </div>
        <div class="form-group">
          <%= f.label :username, class: "form-label mb-2" %>
          <%= f.text_field :username, class: "form-control form-control-lg" %>
        </div>
        <div class="form-group">
          <%= f.label :email, class: "form-label mb-2" %>
          <%= f.email_field :email, class: "form-control form-control-lg" %>
        </div>
        <div class="form-group">
          <%= f.label :password, class: "form-label mb-2 mt-3" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, class: "form-label mb-2 mt-3"  %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
        </div>
        <div class="form-group">
          <%= f.submit "Sign Up", class: "btn btn-primary mt-4" %>
        </div>
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>